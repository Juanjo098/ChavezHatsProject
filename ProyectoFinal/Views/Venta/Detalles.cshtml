@model ProyectoFinal.Clases.Consultas.VentaCONS
@using ProyectoFinal.Clases.Consultas;

@{
    ViewData["Title"] = "Detalles";
    UsuarioCONS usuario = ViewBag.usuario;
    List<SomberoVentaCONS> sombreros = ViewBag.sombreros;
}
<head>
    <style>

        .h4Editar {
            font-family: 'Slabo 27px', serif;
            font-size: 35px;
            height: 29px;
            text-align: center;
        }

        dl.row1 {
    border-style: solid;
    border-width: medium;
    padding: 25px 65px 19px 27px;
    margin: 16px 733px 16px 1px;
    background-color: wheat;
}




    </style>
</head>

<div class="titulo">
    <b>  <h4 class="h4Editar"> Detalles de venta</h4></b>
</div>
<hr />
<div class="1">
   
    <dl class="row1">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.total)
        </dd>
    </dl>
    <hr />
    <h2>Usuario</h2>
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@usuario.id</td>
                <td>@usuario.nombre</td>
                <td>@usuario.correo</td>
            </tr>
        </tbody>
    </table>
    <hr />
    <h2>Sombreros</h2>
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Modelo</th>
                <th>Clase</th>
                <th>Precio</th>
                <th>Unidades</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SomberoVentaCONS item in sombreros)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.modelo</td>
                    <td>@item.clase</td>
                    <td>@item.precio</td>
                    <td>@item.unidades</td>
                    <td>@item.subTotal</td>
                </tr>
            }
        </tbody>
    </table>
</div>
