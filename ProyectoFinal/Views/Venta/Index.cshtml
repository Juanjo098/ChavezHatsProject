@model IEnumerable<ProyectoFinal.Clases.Consultas.VentaCONS>

@{
    ViewData["Title"] = "Index";
    DateTime fechaInicio = ViewBag.fechaInicio == null ? DateTime.Now : ViewBag.fechaInicio;
    DateTime fechaFinal = ViewBag.fechaFinal == null ? DateTime.Now : ViewBag.fechaFinal;

}

<h1>Index</h1>

<form asp-action="Index" method="post" class="form row">
    <div class="form-group col-6">
        <label class="form-label">Fecha de inicio</label>
        <input type="date" class="form-control" name="fechaInicio" id="fechaInicio"/>
    </div>
    <div class="form-group col-6">
        <label class="form-label">Fecha final</label>
        <input type="date" class="form-control" name="fechaFinal" id="fechaFinal"/>
    </div>
    <div class="btn-group">
        <button type="submit">Buscar</button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        console.log(@fechaInicio.ToString("yyyy-MM-dd"))
        document.getElementById("fechaInicio").value = "@fechaInicio.ToString("yyyy-MM-dd")"
        document.getElementById("fechaFinal").value = "@fechaFinal.ToString("yyyy-MM-dd")"
    })
</script>
