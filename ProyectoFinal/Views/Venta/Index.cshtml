@model IEnumerable<ProyectoFinal.Clases.Consultas.VentaCONS>

@{
    ViewData["Title"] = "Index";
    DateTime fechaFinal = ViewBag.fechaFinal == null ? DateTime.Now : ViewBag.fechaFinal;
    DateTime fechaInicio;
    if (ViewBag.fechaInicio == null)
    {
        fechaInicio = fechaFinal.AddMonths(-1);
        if (fechaInicio.Month == 12 && fechaFinal.Month == 1)
        {
            fechaInicio = new DateTime(fechaInicio.Year - 1, fechaInicio.Month, fechaInicio.Day);
        }
    }
    else
    {
        fechaInicio = ViewBag.fechaInicio;
    }
}
